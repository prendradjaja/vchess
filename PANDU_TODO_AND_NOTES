  /Users/pandu/c/variants/Colorbound.js
  /Users/pandu/c/variants/Schess.js

  x static get PawnSpecs(.) -- promotion
  x getPpath(b) -- path to images
  x static get AMAZON(.) -- abbreviation "a"
  x static get PIECES(.)


  x getPotentialMovesFrom([x, y])
    x getPotentialAmazonMoves([x, y])
  x isAttacked(sq, color)
    x isAttackedByAmazon([x, y])
  x static get VALUES(.)
  x static get SEARCH_DEPTH() -- 2? perfect, schess, and colorbound all use this, was that deliberate?
